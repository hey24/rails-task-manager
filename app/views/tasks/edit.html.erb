<div class="container m-3">
  <%= form_with model: @task do |f|  %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details%>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to task", task_path(@task) %>
</div>
