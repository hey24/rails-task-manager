<div class="container m-3">
  <h1>Task List</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li style="list-style: none">
        <% if task.completed? %>
          <i class="fa-solid fa-square-check"></i>
        <% else %>
          <i class="fa-solid fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Create new task', new_task_path %>
</div>
